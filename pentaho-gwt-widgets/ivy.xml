<?xml version="1.0" encoding="UTF-8"?>
<ivy-module version="2.0">
    <info organisation="pentaho" module="pentaho-gwt-widgets" revision="1.0-SNAPSHOT" />
    
    <configurations>
    	<conf name="default"/>
    	<conf name="dev"         visibility="private"/>
    	<conf name="dev-mac"     visibility="private"/>
    	<conf name="dev-win"     visibility="private"/>
    	<conf name="dev-linux"   visibility="private"/>
    	<conf name="test"        visibility="private"/>
    </configurations>
    
    <dependencies defaultconf="default->default">
        <!--  Actual dependencies -->
        <dependency org="org.zenica"     name="gwt-datepicker" rev="r17"   conf="default->default"/>
        
        <!--  Build tool dependencies -->
        <dependency org="com.google.gwt" name="gwt-user"        rev="1.5.1" conf="dev->default"/>
        
        <dependency org="com.google.gwt" name="gwt-dev-mac"          rev="1.5.1" conf="dev-mac->default"/>
        <dependency org="com.google.gwt" name="libgwt-ll"            rev="1.5.1" conf="dev-mac->default"/>
        <dependency org="com.google.gwt" name="libswt-agl-carbon"    rev="1.5.1" conf="dev-mac->default"/>
        <dependency org="com.google.gwt" name="libswt-carbon"        rev="1.5.1" conf="dev-mac->default"/>
        <dependency org="com.google.gwt" name="libswt-pi-carbon"     rev="1.5.1" conf="dev-mac->default"/>
        <dependency org="com.google.gwt" name="libswt-webkit-carbon" rev="1.5.1" conf="dev-mac->default"/>
        
        <dependency org="com.google.gwt" name="gwt-dev-windows" rev="1.5.1" conf="dev-win->default"/>
        <dependency org="com.google.gwt" name="gwt-ll"          rev="1.5.1" conf="dev-win->default"/>
        <dependency org="com.google.gwt" name="swt-win32"       rev="1.5.1" conf="dev-win->default"/>
        
        <!--  Testing dependencies -->
        <dependency org="junit"          name="junit"          rev="4.4" conf="test->default"/>
    </dependencies>
</ivy-module>
